<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

  <scm>
    <url>https://github.com/nfac/qtaste</url>
    <connection>scm:git:ssh://git@github.com/nfac/qtaste.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/nfac/qtaste.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

   <groupId>com.qspin.qtaste</groupId>
   <artifactId>qtaste</artifactId>
   <version>1.2.3-SNAPSHOT</version>
   <packaging>pom</packaging>
   <name>QTaste: QSpin Tailored Automated Test Environment</name>
   <description>QTaste is a generic engine to perform automated integration tests</description>
   <url>https://sourceforge.net/projects/qtaste/</url>
   <licenses>
       <license>
           <name>LGPL</name>
           <url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
           <distribution>repo</distribution>
       </license>
   </licenses>

  <modules>
      <module>testapi-parent</module>
      <module>kernel</module>
      <module>toolbox</module>
      <module>plugins_src/tools</module>
   </modules>

   <properties>
      <qtaste-version>1.2.3-SNAPSHOT</qtaste-version>
   </properties>

   <build>
      <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-release-plugin</artifactId>
            <version>2.4.1</version>
            <configuration>
                <goals>deploy</goals>
                <autoversionsubmodules>true</autoversionsubmodules>
                <tagNameFormat>v@{project.version}</tagNameFormat>
            </configuration>
        </plugin>
      </plugins>
   </build>
</project>

